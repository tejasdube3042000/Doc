<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/user"
    tools:context=".StudentLoginActivity" >

    <EditText
        android:id="@+id/studname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/studpass"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Username"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/studpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/studlogin"
        android:layout_below="@+id/studname"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/studregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/roundbutton"
        android:text="Register" />

    <Button
        android:id="@+id/studlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/studregister"
        android:layout_below="@+id/studpass"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundbutton"
        android:text="Login" />

</RelativeLayout>
