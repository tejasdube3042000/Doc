<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9370DB"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentRegistrationActivity" >
    
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/studename"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/roundedit"
                android:ems="10"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/studeclg1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/roundedit"
                android:ems="10"
                android:hint="Enter Your Collauge Name"
                android:inputType="textPersonName"
                android:textColorHint="#000000" />

            <Spinner
                android:id="@+id/spinnbranch"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundedit"
                android:entries="@array/branch" />

            <Spinner
                android:id="@+id/spinnyear"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedit"
                android:entries="@array/year" />

            <EditText
                android:id="@+id/et_roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:textColorHint="#000000"
                 android:background="@drawable/roundedit"
                android:hint="Enter Roll no."
                android:inputType="phone" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/studeemail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundedit"
                android:ems="10"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/studemob"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedit"
                android:ems="10"
                android:maxLength="10"
                android:hint="Enter Your Mobile"
                android:inputType="number"
                android:textColorHint="#000000" >
            </EditText>

            <EditText
                android:id="@+id/studadd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/roundedit"
                android:ems="10"
                android:hint="Enter Your Address"
                android:inputType="textPostalAddress"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/studuname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/roundedit"
                android:ems="10"
                android:hint="Enter Your Username"
                android:inputType="textPersonName"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/studepass"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/roundedit"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:hint="Enter Your Password"
                android:inputType="textPassword"
                android:textColorHint="#000000" />

            <Button
                android:id="@+id/studRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbutton"
                android:text="Register"
                android:textSize="25dp" />

</LinearLayout>
</ScrollView >
