<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9370DB"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TeacherRegistrationActivity" >

   
    <ImageView
        android:id="@+id/stud1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        
        android:src="@drawable/register" />

    <EditText
        android:id="@+id/tname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/spinbranch"
        android:layout_below="@+id/stud1"
        android:textColorHint="#000000"
        
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/tmobile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tuname"
        android:layout_below="@+id/spinbranch"
        android:layout_marginTop="23dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:maxLength="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Mobile"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/temail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tname"
        android:layout_below="@+id/tname"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your   Email"
        android:inputType="textEmailAddress" />

  
    

    <Spinner
        android:id="@+id/spinbranch"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tmobile"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedit"
        android:entries="@array/branch" />
      <EditText
        android:id="@+id/tuname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tpass"
        android:layout_below="@+id/tmobile"
        android:layout_marginTop="17dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Username"
        android:inputType="textPersonName" />
    
    <EditText
        android:id="@+id/tpass"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/tRegister"
        android:layout_alignLeft="@+id/tRegister"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Password"
        android:inputType="textPassword" />
     <Button
        android:id="@+id/tRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
         android:background="@drawable/roundbutton"
         android:textSize="25dp"
        android:text="Register" />
    

</LinearLayout>
