<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9370DB"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ParentRegistrationActivity" >

    <ImageView
        android:id="@+id/stud1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/register" />
    
    
     
    <EditText
        android:id="@+id/pname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/stud1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Name"
        android:inputType="textPersonName" />

    

    

   

    <EditText
        android:id="@+id/pemail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/pname"
        android:layout_below="@+id/pname"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Email"
       />

    <EditText
        android:id="@+id/pchild"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/pemail"
        android:layout_below="@+id/pemail"
        android:layout_marginTop="18dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Child Name"
        android:inputType="textPersonName" >

      
    </EditText>

    <EditText
        android:id="@+id/pmobile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Mobile No"
        android:inputType="number"
        android:textColorHint="#000000" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pusername"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColorHint="#000000"
        android:layout_above="@+id/ppassword"
        android:layout_alignLeft="@+id/pmobile"
        android:layout_marginBottom="21dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Username"
        android:inputType="textPersonName" />
    
    
    <EditText
        android:id="@+id/ppassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/pRegister"
        android:layout_alignLeft="@+id/pusername"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Password"
        android:inputType="textPassword" />
    
    
    
    
    
<Button
        android:id="@+id/pRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ppassword"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundbutton"
        android:textSize="25dp"
        android:text="Register" />
</LinearLayout>
