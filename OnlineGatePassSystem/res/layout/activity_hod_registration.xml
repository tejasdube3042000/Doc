<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#9370DB"
    tools:context=".HodRegistrationActivity" >

    <EditText
        android:id="@+id/hemail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/spin_branch"
        android:layout_below="@+id/hname"
        android:layout_marginTop="19dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Email"
        android:textColorHint="#000000"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/spin_branch"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/hemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundedit"
        android:entries="@array/branch" />

    <ImageView
        android:id="@+id/stud1"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/register" />

    <EditText
        android:id="@+id/hname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/hemail"
        android:layout_below="@+id/stud1"
        android:layout_marginTop="17dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/hregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hpassword"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundbutton"
        android:textSize="25dp"
        android:text="Register" />

    <EditText
        android:id="@+id/husername"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/hmobile"
        android:layout_below="@+id/hmobile"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Username"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/hmobile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/spin_branch"
        android:layout_below="@+id/spin_branch"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Mobile"
        android:inputType="number" />

    <EditText
        android:id="@+id/hpassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/husername"
        android:layout_below="@+id/husername"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter Your Password"
        android:inputType="textPassword" />

</RelativeLayout>
