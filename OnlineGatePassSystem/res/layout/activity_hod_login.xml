<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/user"
    tools:context=".HodLoginActivity" >

    <EditText
        android:id="@+id/huname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Username"
        android:inputType="textPersonName"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/hRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hlogin"
        android:layout_below="@+id/hlogin"
        android:layout_marginTop="24dp"
        android:background="@drawable/roundbutton"
        android:textSize="25dp"
        android:text="Register"
        android:textColor="#000000" />

    <Button
        android:id="@+id/hlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundbutton"
        android:text="Login"
         android:textSize="25dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/hpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/huname"
        android:layout_below="@+id/huname"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedit"
        android:ems="10"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textColorHint="#000000" />

</RelativeLayout>
